<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/primaryColor"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnglish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="English"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnUrdu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUrdu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="اردو"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.07"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnEnglish"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivPix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/grocere"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUrdu"
        app:layout_constraintWidth_percent="1" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Welcome to GrocerApp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="@id/ivPix"
        app:layout_constraintRight_toRightOf="@id/ivPix"
        app:layout_constraintTop_toBottomOf="@id/ivPix"
        app:layout_constraintWidth_percent="1" />


    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Delivering 5000+ products including groceries,fruits veg,meats to your door."
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@id/tvTitle"
        app:layout_constraintRight_toRightOf="@id/tvTitle"
        android:gravity="center"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Login"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.3"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tvDetail"
        app:layout_constraintRight_toRightOf="@id/tvDetail"
        app:layout_constraintTop_toBottomOf="@id/tvDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>